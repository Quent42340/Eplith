#---------------------------------------------------------------------------------
# Compiler executables
#---------------------------------------------------------------------------------
CC		:=	gcc

#---------------------------------------------------------------------------------
# Any extra libraries you wish to link with your project
#---------------------------------------------------------------------------------
LIBS	:=	-lfl -lm

#---------------------------------------------------------------------------------
# list of directories containing libraries, this must be the top level containing
# include and lib
#---------------------------------------------------------------------------------
LIBDIRS	:=	

#---------------------------------------------------------------------------------
# Source folders and executable name
#---------------------------------------------------------------------------------
TARGET	:=  $(shell basename $(CURDIR))
BUILD	:=	build
SOURCES	:=	source
INCLUDES:=	source include build

#---------------------------------------------------------------------------------
# Source files
#---------------------------------------------------------------------------------
ifneq ($(BUILD),$(notdir $(CURDIR)))
#---------------------------------------------------------------------------------
export ADIR		:=	$(CURDIR)

export OUTPUT	:=	$(CURDIR)/$(TARGET)

export VPATH	:=	$(foreach dir,$(SOURCES),$(CURDIR)/$(dir))

export CFILES	:=	$(CURDIR)/$(foreach dir,$(SOURCES),$(wildcard $(dir)/*.c))

export INCLUDE	:=	$(foreach dir,$(INCLUDES),-I$(CURDIR)/$(dir))

export LIBPATHS	:=	$(foreach dir,$(LIBDIRS),-L$(dir)/lib)

#---------------------------------------------------------------------------------
.PHONY: $(BUILD) clean install uninstall
#------------------------------------------------------------------------------
$(BUILD):
	@[ -d $@ ] || mkdir -p $@
	@make --no-print-directory -C $(BUILD) -f $(CURDIR)/Makefile

#---------------------------------------------------------------------------------
clean:
	@echo clean ...
	@rm -fr $(BUILD) $(TARGET)

#---------------------------------------------------------------------------------
install:
	@cp -u $(TARGET) /usr/bin/local/ws
	@echo installed.

#---------------------------------------------------------------------------------
uninstall:
	@rm -f /usr/bin/local/ws
	@echo uninstalled.

#---------------------------------------------------------------------------------
else
#---------------------------------------------------------------------------------
# Makefile targets
#--------------------------------------------------------------------------------
all: $(OUTPUT)

#---------------------------------------------------------------------------------
$(OUTPUT): parser.tab.c lex.yy.c
	@echo built ... $(notdir $@)
	@$(CC) -g parser.tab.c lex.yy.c $(INCLUDE) $(CFILES) $(LIBS) -o $@

#---------------------------------------------------------------------------------
lex.yy.c: $(ADIR)/$(SOURCES)/lexer.l
#---------------------------------------------------------------------------------
	@echo $(notdir $<)
	@flex -o $@ $<

#---------------------------------------------------------------------------------
parser.tab.c: $(ADIR)/$(SOURCES)/parser.y
#---------------------------------------------------------------------------------
	@echo $(notdir $<)
	@bison -d -v -o $@ $<

#---------------------------------------------------------------------------------
endif
#---------------------------------------------------------------------------------

